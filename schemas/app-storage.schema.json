{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AppStorageV2",
  "type": "object",
  "required": [
    "version",
    "items"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "enum": [
        2
      ]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "image",
          "price",
          "currency",
          "siteName",
          "sourceUrl",
          "createdAt",
          "normalizedUrl"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": [
              "string",
              "null"
            ]
          },
          "image": {
            "type": [
              "string",
              "null"
            ]
          },
          "price": {
            "type": [
              "number",
              "null"
            ]
          },
          "currency": {
            "type": [
              "string",
              "null"
            ]
          },
          "siteName": {
            "type": [
              "string",
              "null"
            ]
          },
          "sourceUrl": {
            "type": "string",
            "format": "uri"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "normalizedUrl": {
            "type": "string"
          }
        }
      }
    }
  }
}